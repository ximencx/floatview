<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ff0000"
    android:gravity="center">

    <TextView
        android:id="@+id/phone_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="phone_user_name_tv" />

    <TextView
        android:id="@+id/phone_user_num"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="phone_user_num" />

    <TextView
        android:id="@+id/phone_user_dept"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="phone_user_dept" />

    <ImageView
        android:id="@+id/phone_call_close"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>